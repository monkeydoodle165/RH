<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    
    <RelativeLayout
    android:id ="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">
    
<RelativeLayout
    android:id ="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/raeburnBack"
    android:fillViewport="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >
     
    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/raeburn"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>
        
    
    <TextView
        android:id="@+id/region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLabel"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:textStyle="bold"
    	android:text="REGION SERVED"/>
    
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/region"
        android:paddingTop="12dp"
        android:textSize="14sp"/>
        
    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:textStyle="bold"
    	android:text="CONTACT DETAILS"/>
    
    
    <TextView
        android:id="@+id/phoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:text="Phone Number: "/>
    
    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phoneLabel"
        android:layout_below="@id/contact"
        android:paddingTop="12dp"
        android:textSize="14sp"/>
    
     <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPhone"
        android:paddingTop="0dp"
        android:textSize="14sp"
        android:text="Email: "/>
    
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/emailLabel"
        android:layout_below="@id/txtPhone"
        android:autoLink="email"
        android:paddingTop="0dp"
        android:textSize="14sp"/>


     <TextView
        android:id="@+id/addressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailLabel"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:text="Address: "/>
    
    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/addressLabel"
        android:layout_below="@id/emailLabel"
        android:paddingTop="12dp"
        android:textSize="14sp"/>

	<TextView
	    android:id="@+id/postalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressLabel"
        android:paddingTop="20dp"
        android:textSize="14sp"
        android:text="Postal Address: "/>
    
    <TextView
        android:id="@+id/txtPostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/postalLabel"
        android:layout_below="@id/addressLabel"
        android:paddingTop="20dp"
        android:textSize="14sp"/>
    
     <TextView
        android:id="@+id/faxLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postalLabel"
        android:paddingTop="20dp"
        android:textSize="14sp"
        android:text="Fax: "/>
    
    <TextView
        android:id="@+id/txtFax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/faxLabel"
        android:layout_below="@id/postalLabel"
        android:paddingTop="20dp"
        android:textSize="14sp"/>
    
     <TextView
        android:id="@+id/webLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/faxLabel"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:text="Web Page: "/>
    
    <TextView
        android:id="@+id/txtWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/webLabel"
        android:layout_below="@id/faxLabel"
        android:autoLink="web"
        
        android:paddingTop="12dp"
        android:textSize="14sp"/>
    
    
   <!--  <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPhone"
        android:paddingTop="12dp"
        android:textSize="14sp"/>
         -->
    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/webLabel"
        android:paddingTop="12dp"
        
        android:textSize="14sp"
        android:textStyle="bold"
    	android:text="OVERVIEW"/>
    
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/overview"
        android:paddingTop="12dp"
        
        android:textSize="14sp"/>
        
    
    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt4"
        android:paddingTop="12dp"
        
        android:textSize="14sp"/>

</RelativeLayout>
</RelativeLayout>
</ScrollView>